<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.TextClueActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Clue Here..."
        android:id="@+id/textViewClue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButtonA"
        android:layout_below="@+id/textViewClue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButtonB"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageButtonA"
        android:layout_alignLeft="@+id/imageButtonA"
        android:padding="5dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButtonD"
        android:layout_alignTop="@+id/imageButtonB"
        android:layout_alignLeft="@+id/imageButtonC"
        android:padding="5dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButtonC"
        android:layout_above="@+id/imageButtonB"
        android:layout_toRightOf="@+id/imageButtonA"
        android:layout_toEndOf="@+id/imageButtonA"
        android:padding="5dp" />
</RelativeLayout>
